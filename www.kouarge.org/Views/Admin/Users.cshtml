@using www.kouarge.org.Identity
@addTagHelper www.kouarge.org.CustomTagHelpers.*,www.kouarge.org
@model IEnumerable<User>
@{
    ViewData["Title"] = "Users";
    Layout = "C:/Users/PC/Masaüstü/www.kouarge.org/www.kouarge.org/Pages/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <h1 class="h3">User List</h1>
        <hr>
        <a class="btn btn-primary btn-sm" href="/admin/user/create">Create User</a>
        <hr>
        <table data-page-length='3' id="myTable" class="table table-bordered mt-3">
            <thead>
                <tr>
                    <td>FirstName</td>
                    <td>LastName</td>
                    <td>UserName</td>
                    <td>Email</td>
                    <td>EmailConfirmed</td>
                    <td>Roller</td>
                    <td>Rol Atama</td>
                    <td style="width: 160px;"></td>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() > 0)
                {
                    @foreach (var item in Model)
                    {
                        <tr class="@(item.EmailConfirmed?"":"bg-warning")">
                            <td>@item.FirstName</td>
                            <td>@item.LastName</td>
                            <td>@item.UserName</td>
                            <td>@item.Email</td>
                            <td>@item.EmailConfirmed</td>
                            <td user-roles="@item.Id">

                            </td>
                            <td>
                                <a class="btn btn-success" asp-action="RoleAssign" asp-route-id="@item.Id">Rol ata</a>
                            </td>

                        </tr>
                    }
                }
                else
                {
                    <div class="alert alert-warning">
                        <h3>No Users</h3>
                    </div>
                }


            </tbody>
        </table>
    </div>
</div>

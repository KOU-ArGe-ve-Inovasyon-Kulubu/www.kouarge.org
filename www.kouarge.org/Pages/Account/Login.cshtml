@page
@model www.kouarge.org.Pages.LoginModel
<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary pl-3">LOGIN</h2>
            <hr/>
		</div>
		<div asp-validation-summary="All"></div>
		<div class="mb-3">
			<label asp-for="@Model.Name"></label>
			<input asp-for="@Model.Name" name="name" class="form-control" />
			<span asp-validation-for="@Model.Name" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="@Model.PasswordHash"></label>
			<input asp-for="@Model.PasswordHash" name="passwordhash" class="form-control" />
			<span asp-validation-for="@Model.PasswordHash" class="text-danger"></span>
		</div>
		
		<button type="submit" class="btn btn-primary" style="width:150px;">Login</button>       
	</div>
	
</form>

@section Scripts
{
    <script src="/modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="/modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}

@page
@model www.kouarge.org.Pages.Admin.RolesModel

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Roles List</h2>
        </div>
    </div>
    <br /><br />
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Role Name
                </th>
                <th>
                    Id
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in @Model.Roles)
            {
                <tr>
                    <td width="50%">@role.Name</td>
                    <td width="50%">@role.Id</td>
                </tr>
            }
        </tbody>
    </table>
</div>
